<div>
	<h2><%=article.source.title%></h2>

	<div
		id="stories"
		style="display: flex; overflow-x: scroll; overflow-y: hidden"
	>
		<% article.relatedArticles.forEach(function(article){ %> <%-
		include('storyCard', {article:article}); -%> <% }); %>
	</div>
	<div
		id="active_article"
		class="container-fluid"
		style="width: 65vw; padding-top: 10px; padding-bottom: 15px"
	></div>
</div>

<div
	id="messageArea_<%=article.id%>"
	class="container-fluid jumbotron"
	style="width: 80%; margin-top: 20px; max-height: 35vh; overflow-y: scroll"
>
	<div class="card">
		<div class="card-header">Quote</div>
		<div class="card-body">
			<blockquote class="blockquote mb-0">
				<p>A well-known quote, contained in a blockquote element.</p>
				<footer class="blockquote-footer">
					Someone famous in <cite title="Source Title">Source Title</cite>
				</footer>
			</blockquote>
		</div>
	</div>
