<div>
  <h2 id="backToTheTop"><%=article.source.title%></h2>
  <div
    id="stories"
    style="display: flex; overflow-x: scroll; overflow-y: hidden"
  >
    <% article.relatedArticles.forEach(function(article){ %> <%-
    include('storyCard', {article:article}); -%> <% }); %>
  </div>
  <div
    id="active_article"
    class="container-fluid"
    style="width: 62vw; padding-top: 10px; padding-bottom: 15px"
  ></div>
</div>

